{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__mocks__",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
